package config

import (
	"reflect"
	"testing"

	"github.com/spf13/viper"
)

func TestRestAPI(t *testing.T) {
	tt := []struct {
		bind     string
		port     int
		expected RestAPI
	}{
		{"", 0, RestAPI{"", 5000}},
		{"127.0.0.1", 8000, RestAPI{"127.0.0.1", 8000}},
	}
	for i, tc := range tt {
		t.Run(fmt.Sprintf("%d", i), func(t *testing.T) {
			if tc.bind != "" {
				viper.Set(vRestAPIBind, tc.bind)
			}
			if tc.port != 0 {
				viper.Set(vRestAPIPort, tc.port)
			}
			config := NewRestAPIConfig()
			if !reflect.DeepEqual(tc.expected, config) {
				t.Errorf("want %#v, got %#v", tc.expected, config)
			}
		})
	}
}
